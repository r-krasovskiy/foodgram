[flake8]
# Игнорировать специфичные ошибки
ignore = 
    W503,
    F811,
    I001,
    I004,
    I005,
    E501,
    W291,
    F401,
    E302,
    I001,
    I004,
    I005
# Не проверять код в директориях:
exclude = 
    tests/,
    */migrations/,
    venv/,
    */venv/,
    env/
    */env/,
# Не проверять указанные файлы на соответствие правилам:
per-file-ignores =
    */settings.py:E501
